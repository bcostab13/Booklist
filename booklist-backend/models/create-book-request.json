{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "book",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "pattern": "^[^ ]{1}.*"
        },
        "author": {
            "type": "string",
            "minLength": 3
        },
        "dueDate": {
            "type": "string",
            "minLength": 8
        }
    },
    "required": [
        "name", 
        "author",
        "dueDate"
    ],
    "additionalProperties": true
}